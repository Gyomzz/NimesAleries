{% extends 'base.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block body %}
	<h1>Category index</h1>

	<a href="{{ path('crud_category_new') }}" class="my-2">Create new</a>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Ordering</th>
				<th>Id_parent</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.id }}</td>
					<td>{{ category.name }}</td>
					<td>{{ category.ordering }}</td>
					{% if category.idParent %}
						<td>{{ category.idParent.getName() }}</td>
						{% else %}
                        <td></td>
					{% endif %}

					
					<td>
						<a href="{{ path('crud_category_show', {'id': category.id}) }}">show</a>
						<a href="{{ path('crud_category_edit', {'id': category.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
