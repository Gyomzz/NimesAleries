<!-- Header -->
<header
	class="header shop">
	<!-- Topbar -->
	<div class="topbar">
		<div class="container">
			<div class="row">
				<div
					class="col-lg-5 col-md-12 col-12">
					<!-- Top Left -->
					<div class="top-left">
						<ul class="list-main">
							<li>
								<i class="ti-email"></i>
								contact@nimesaleries.com</li>
						</ul>
					</div>
					<!--/ End Top Left -->
				</div>
				<div
					class="col-lg-7 col-md-12 col-12">
					<!-- Top Right -->
					<div class="right-content">
						<ul class="list-main">
							<li>
								<i class="ti-location-pin"></i>
								Nimes</li>
							<li>
								<i class="ti-alarm-clock"></i>
								<a href="#">Deals</a>
							</li>
							<li>
								<i class="ti-user"></i>
								<a href="#">Mon compte</a>
							</li>
							{% if app.user %}
								<li>
									<i class="ti-power-off"></i>
									<a href="{{path('app_logout')}}">Se deconnecter</a>
								</li>
							{% else %}
								<li>
									<i class="ti-power-off"></i>
									<a href="{{path('app_login')}}">Se connecter</a>
								</li>
							{% endif %}

						</ul>
					</div>
					<!-- End Top Right -->
				</div>
			</div>
		</div>
	</div>
	<!-- End Topbar -->
	<div class="middle-inner">
		<div class="container">
			<div class="row">
				<div
					class="col-lg-2 col-md-2 col-12">
					<!-- Logo -->
					<div class="logo">
						<a href="{{ path('index')}}"><img src="images/logo.png" alt="logo"></a>
					</div>
					<!--/ End Logo -->
					<!-- Search Form -->
					<div class="search-top">
						<div class="top-search">
							<a href="#0">
								<i class="ti-search"></i>
							</a>
						</div>
						<!-- Search Form -->
						<div class="search-top">
							<form class="search-form">
								<input type="text" placeholder="Rechercher ici ..." name="search">
								<button value="search" type="submit">
									<i class="ti-search"></i>
								</button>
							</form>
						</div>
						<!--/ End Search Form -->
					</div>
					<!--/ End Search Form -->
					<div class="mobile-nav"></div>
				</div>
				<div class="col-lg-8 col-md-7 col-12">
					<div class="search-bar-top">
						<div class="search-bar">
							<select>
								<option selected="selected">Catégories</option>
								{# TODO get categories #}
								{% for item in app.session.get('categories') %}
									<option>{{item.name}}</option>
								{% endfor %}
							</select>
							<form>
								<input name="search" placeholder="Rechercher des produits ici ..." type="search">
								<button class="btnn">
									<i class="ti-search"></i>
								</button>
							</form>
						</div>
					</div>
				</div>
				<div class="col-lg-2 col-md-3 col-12">
					<div
						class="right-bar">
						<!-- Search Form -->
						<div class="sinlge-bar">
							<a href="#" class="single-icon">
								<i class="fa fa-heart-o" aria-hidden="true"></i>
							</a>
						</div>
						<div class="sinlge-bar">
							<a href="#" class="single-icon">
								<i class="fa fa-user-circle-o" aria-hidden="true"></i>
							</a>
						</div>
						<div class="sinlge-bar shopping">
							<a href="#" class="single-icon">
								<i class="ti-bag"></i>
								<span class="total-count">2</span>
							</a>
							<!-- Shopping Item -->
							<div class="shopping-item">
								<div class="dropdown-cart-header">
									<span>2 Produits</span>
									<a href="#">Voir panier</a>
								</div>
								<ul class="shopping-list">
									<li>
										<a href="#" class="remove" title="Remove this item">
											<i class="fa fa-remove"></i>
										</a>
										<a class="cart-img" href="#"><img src="https://via.placeholder.com/70x70" alt="#"></a>
										<h4>
											<a href="#">Woman Ring</a>
										</h4>
										<p class="quantity">1x -
											<span class="amount">$99.00</span>
										</p>
									</li>
									<li>
										<a href="#" class="remove" title="Remove this item">
											<i class="fa fa-remove"></i>
										</a>
										<a class="cart-img" href="#"><img src="https://via.placeholder.com/70x70" alt="#"></a>
										<h4>
											<a href="#">Woman Necklace</a>
										</h4>
										<p class="quantity">1x -
											<span class="amount">$35.00</span>
										</p>
									</li>
								</ul>
								<div class="bottom">
									<div class="total">
										<span>Total</span>
										<span class="total-amount">$134.00</span>
									</div>
									<a href="checkout.html" class="btn animate">Vérifier</a>
								</div>
							</div>
							<!--/ End Shopping Item -->
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Header Inner -->
	<div class="header-inner">
		<div class="container">
			<div class="cat-nav-head">
				<div class="row">
					<div class="col-lg-3"></div>
					<div class="col-lg-9 col-12">
						<div
							class="menu-area">
							<!-- Main Menu -->
							<nav class="navbar navbar-expand-lg">
								<div class="navbar-collapse">
									<div class="nav-inner">
										<ul class="nav main-menu menu navbar-nav">
											<li class="active">
												<a href="{{path('index')}}">Accueil</a>
											</li>
											<li>
												<a href="#">Produits</a>
											</li>
											<li>
												<a href="#">Services</a>
											</li>
											<li>
												<a href="#">Pages</a>
											</li>
											<li>
												<a href="#">Contact</a>
											</li>
										</ul>
									</div>
								</div>
							</nav>
							<!--/ End Main Menu -->
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!--/ End Header Inner -->
</header>
<!--/ End Header -->
