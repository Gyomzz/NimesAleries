{% extends 'admin/base.html.twig' %}
{% block body %}
	<div class="container mt-3 col">
		<h1>Gestion des catégorie</h1>
		<a href="{{ path('crud_category_new') }}" class="my-2">Ajouter une catégorie</a>
		<table id="example" class="display" style="width:100%">
			<thead class="sticky-top text-white" style=" background: #333;">
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Ordering</th>
					<th>Id_parent</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.id }}</td>
						<td>{{ category.name }}</td>
						<td>{{ category.ordering }}</td>
						{% if category.idParent %}
							<td>{{ category.idParent.getId() }}
								|
								{{ category.idParent.getName() }}</td>

						{% else %}
							<td></td>
						{% endif %}
						<td class="d-flex flex-column">
							<a href="{{ path('crud_category_show', {'id': category.id}) }}" class="btn">Voir</a>
							<a href="{{ path('crud_category_edit', {'id': category.id}) }}" class="btn">Editer</a>
							<div>{{ include('crud_category/_delete_form.html.twig') }}</div>
						</td>
					</tr>
	            {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
