{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="container my-5">

		<h1>Détails de la catégorie</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ category.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ category.name }}</td>
				</tr>
				<tr>
					<th>Ordering</th>
					<td>{{ category.ordering }}</td>
				</tr>
				<tr>
					<th>Id_parent</th>
					<td>{{ category.idParent }}</td>
				</tr>
			</tbody>
		</table>
		<div class="d-flex flex-column">
			<a href="{{ path('crud_category_edit', {'id': category.id}) }}" class="btn w-25">Editer</a>
			<a href="{{ path('crud_category_index') }}">Retour à la liste</a>
		</div>
	</div>
{% endblock %}
