{{ form_start(form, {'attr': {'class': 'form'}}) }}
<div class="row">
	<div class="col-12">
		<label>
			Titre
			<span style="color: #ff2c18;">*</span>
		</label>
		{{ form_row(form.Title, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="col-12">
		<label>
			Accroche
			<span style="color: #ff2c18;">*</span>
		</label>
		{{ form_row(form.teaser, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="col-12">
		<label>
			Ordre dans le carousel
			<span style="color: #ff2c18;">*</span>
		</label>
		{{ form_row(form.ordering, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="col-12">
		<label>
			Image (Jpeg, Png)
			<span style="color: #ff2c18;">* :</span>
		</label>
		{{ form_row(form.picture, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="col-12">
		<label>
			Description de l'image
			<span style="color: #ff2c18;">*</span>
		</label>

		{{ form_row(form.description, {'attr': {'class': 'form-control message'}}) }}
	</div>
	<div class="col-6 mx-auto">
		<div class="form-group button">
			{{ form_row(form.save, {'attr': {'class': 'form-control btn btn-primary py-3 px-5'}}) }}
		</div>
	</div>
</div>
{{ form_end(form) }}
