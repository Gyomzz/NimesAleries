{% extends 'base.html.twig' %}

{% block body %}
	<div class="container mt-4  my-3">

		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
			<div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 280px;">
				<ul class="nav nav-pills flex-column mb-auto">
					<li class="nav-item">
						<a href="#" class="nav-link active" aria-current="page">
							<svg class="bi me-2" width="16" height="16">
								<use xlink:href="#home"></use>
							</svg>
							Mon compte
						</a>
					</li>
					<li>
						<a href="#" class="nav-link text-white">
							<svg class="bi me-2" width="16" height="16">
								<use xlink:href="#speedometer2"></use>
							</svg>
							Mes commandes
						</a>
					</li>
					<li>
						<a href="#" class="nav-link text-white">
							<svg class="bi me-2" width="16" height="16">
								<use xlink:href="#table"></use>
							</svg>
							Mes données
						</a>
					</li>
					<li>
						<a href="#" class="nav-link text-white">
							<svg class="bi me-2" width="16" height="16">
								<use xlink:href="#grid"></use>
							</svg>
							Paiement
						</a>
					</li>
					<li>
						<a href="#" class="nav-link text-white">
							<svg class="bi me-2" width="16" height="16">
								<use xlink:href="#people-circle"></use>
							</svg>
							Mes adresses
						</a>
					</li>
				</ul>
			</div>

		{% else %}
			<form method="post" class="mt-2 text-center" style="height: 300px; ">

				<div style="margin-left: 20%; margin-right: 20%;">

					<h1 class="h3 mb-3 font-weight-normal">Je suis déjà client</h1>
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
					<label for="inputPassword">Mot de passe</label>
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<div class="text-right mt-3">
						<a href="{{ path('app_forgot_password_request') }}">

							Mot de passe oublié ?
						</a>
					</div>
					<button class="btn btn-success mt-4 w-100" type="submit">

						Se connecter
					</button>
				</div>
			</form>
		</div>
		<div class="container mt-4 " style="height: 400px;">
			<div class="text-center">
				<h2 class="mt-2">Vous êtes nouveau ? Inscrivez-vous vite</h2>
				<span>et profitez de nombreux avantages !!!</span>
			</div>
			<div class="mt-2" style="margin-left: 20%; margin-right: 20%;">
				<p>✔️ Commandez plus rapidement lors de votre prochain achat</p>
				<p>✔️ Conserver l'historique des commandes passées</p>
				<p>✔️ Bénéficiez de remises exclusives et d'offres spéciales</p>
				<p>✔️ Créer et gérer facilement une liste de souhaits</p>
				<span>... et bien plus encore !</span>
				<a href="{{ path('app_register')}}" class="btn btn-success my-4 w-100">S'inscrire</a>
			</div>

		{% endif %}
	</div>
{% endblock %}
