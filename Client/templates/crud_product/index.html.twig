{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
      <!-- in the <head> section -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jq-3.2.1/dt-1.10.16/datatables.min.css"/>
{% endblock %}

{% block body %}
	<div class="container mt-3">
		<h1>Gestion des produits</h1>
		<a href="{{ path('crud_product_new') }}" class="my-3">Ajouter un produit</a>
		<table id="example" class="display" style="width:100%">
			<thead class="sticky-top text-white" style=" background: #333; top: 50px;">
				<tr>
					<th>Id</th>
					<th>Mark</th>
					<th>Name</th>
					<th>Description</th>
					<th>Price</th>
					<th>Stock</th>
					<th>Active</th>
					<th>Ajout√© le</th>
					<th>Image</th>
					<th>Categorie</th>
					<th class="text-center">actions</th>
				</tr>
			</thead>
			<tbody>
				{% for product in products %}
					<tr>
						<td>{{ product.id }}</td>
						<td>{{ product.mark }}</td>
						<td>{{ product.name }}</td>
						<td>{{ product.description }}</td>
						<td>{{ product.price }}</td>
						<td>{{ product.stock }}</td>
						<td>{{ product.active ? 'Yes' : 'No' }}</td>
						<td>{{ product.createdAt|date("d/m/Y") }}</td>

						<td>
							<a href="{{ asset('uploads/' ~ product.image) }}">Voir l'image</a>
						</td>

						<td>
							{{ product.getIdCategorie().getName() }}</td>
						<td>
							<div class="d-flex flex-column">
								<a href="{{ path('crud_product_show', {'id': product.id}) }}" class="btn">Voir</a>
								<a href="{{ path('crud_product_edit', {'id': product.id}) }}" class="btn">Editer</a>
								{{ include('crud_product/_delete_form.html.twig') }}
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
    {% block javascripts %}
        {{ parent() }}
        <!-- before the closing <body> tag -->
        <script type="text/javascript" src="https://cdn.datatables.net/v/dt/jq-3.2.1/dt-1.10.16/datatables.min.js"></script>
        <script> 
            $(document).ready(function() {
                $('#example').DataTable();
            } ); 
        </script>

    {% endblock %}
{% endblock %}
