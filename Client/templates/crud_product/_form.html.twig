{{ form_start(form, {'attr': {'class': 'form'}}) }}
<div class="row">
	<div class="col-12">
		<label>
			Nom du produit
			<span style="color: #ff2c18;">*</span>
		</label>
		{{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="col-12">
		<label>
			Marque du produit
			<span style="color: #ff2c18;">*</span>
		</label>
		{{ form_row(form.mark, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="col-12">
		<label>
			Prix du produit
			<span style="color: #ff2c18;">*</span>
		</label>
		{{ form_row(form.price, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="col-12 d-flex">
		<label class="me-2">
			Actif
			<span style="color: #ff2c18;">:*
			</span>

		</label>
		{{ form_row(form.active) }}
	</div>
	<div class="col-12">
		<label>
			Description du produit
			<span style="color: #ff2c18;">*</span>
		</label>

		{{ form_row(form.description, {'attr': {'class': 'form-control message'}}) }}
	</div>
	<div class="col-12">
		<label>
			Disponible le
			<span style="color: #ff2c18;">* :</span>
		</label>
		{{ form_row(form.created_at, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="col-12">
		<label>
			Quantité en stock
			<span style="color: #ff2c18;">* :</span>
		</label>
		{{ form_row(form.stock, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="col-12">
		<label>
			Image du produit (Jpeg, Png)
			<span style="color: #ff2c18;">* :</span>
		</label>
		{{ form_row(form.picture, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="col-12">
		<label>
			Catégorie
			<span style="color: #ff2c18;">* :</span>
		</label>
		{{ form_row(form.Id_categorie, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="col-6 mx-auto">
		<div class="form-control button">
			{{ form_row(form.save, {'attr': {'class': 'form-control btn btn-primary py-3 px-5'}}) }}
		</div>
	</div>
</div>
{{ form_end(form) }}
